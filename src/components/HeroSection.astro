---
import Headline from "../components/Headline.astro";
import SocialMedia from "./SocialMedia.astro";
---

<section
  id="heroSection"
  class="flex flex-col h-full w-screen herosection overflow-x-hidden"
>
  <div class="flex flex-col">
    <div
      class="h-[90vh] w-full items-center justify-center flex flex-col animate-name"
    >
      <img
        class="opacity-1 w-[200px] h-[200px] rounded-full relative heroImage"
        src="./profilepic.png"
        alt="Enrique Alcocer"
      />
      <h1
        class="animated-name-1 text-[#ececec] text-center opacity-1 font-normal z-50 relative text-4xl"
      >
        Enrique Alcocer
      </h1>
      <h3 class="animated-name-11">Desarrollador de Software</h3>
    </div>
  </div>
</section>
<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  const t1 = gsap.timeline({
    scrollTrigger: {
      trigger: ".heroImage",
      start: "top 20%",
      end: "bottom 20%",
      scrub: true,
    },
  });
  t1.to(".heroImage", {
    scale: 0.3,
    x: window.innerWidth / 2 - 50,
    y: -55,
    margin: 0,
  });
  t1.to(
    ".animated-name-1",
    {
      opacity: 0,
    },
    "<"
  );
  t1.to(
    ".animated-name-11",
    {
      opacity: 0,
    },
    0
  );
  t1.to(
    ".headerHero",
    {
      opacity: 1,
    },
    0
  );
  t1.set(".heroImage", {
    position: "fixed",
    top: "0px",
    opacity: 1,
    duration: 5,
    zIndex: 100,
  });
</script>
